<?xml version="1.0" encoding="utf-8"?>
<table name="posts" timestamps="yes">
	<field name="name" type="string" size="tiny"/>
	<field name="slug" type="string" size="tiny"/>
	<field name="body" type="string"/>
	<ref name="feed" alias="posts" table="feeds"/>
	<ref name="user" alias="posts" table="users"/>
</table>